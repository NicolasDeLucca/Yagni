{
    "compilerOptions": {      
      "target": "es2016",
      "module": "commonjs",
      "rootDir": ".",
      "strict": true,
      "moduleResolution": "node",                           
      "typeRoots": [
        "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", ".build"]
}